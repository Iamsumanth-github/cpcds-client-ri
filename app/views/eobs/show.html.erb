<section class='container'>
  <section class='row'>
      <div class='col-9'>
        <table class='table table-dark'>
        <tr>
        <td><h3>Explanation of Benefit:</td>
        <td><%= @eob.id.last(6) %></td>        
        </tr>
        <tr>
        <td><h4>Patient: </td>
        <td><%= @eob.claimpatient%> </td>        
        </tr>
                <tr>
        <td> <h4>Dates: </td>
        <td><%= @eob.created%> </td>        
        </tr>
                        <tr>
        <td> <h4>Facility: </td>
        <td><%= @eob.facility%> </td>        
        </tr>
                               <tr>
        <td> <h4>Provider: </td>
        <td><%= @eob.provider%> </td>        
        </tr>
 
                <tr>
        <td><h4>Claim:  </td>
        <td><%= @eob.claim_reference %>  </td>        
        </tr>
                                      <tr>
        <td> <h4>Total: </td>
        <td><%= @eob.total.join(" ")%> </td>        
        </tr>
                               <tr>
        <td> <h4>Payment: </td>
        <td><%= @eob.payment%> </td>        
        </tr>
 
                <tr>
        <td><h4>Careteam:  </td>
        <td> <%= @eob.careteam.values.map{ |c| c[:name] + " (" + c[:role] + ")"}.join(",")%></td>        
        </tr>
        </table class='table table-dark'>
        </div>
         <!–– <div class='col-5' id='map' ––>
         <!–– </div ––>
         <div class='col-9'>
          <table class='table table-dark'>
          <colgroup>
          <col style="width: 15%"></col>
          <col style="width: 25%"></col>
          <col style="width: 40%"></col>
          <col style="width: 20%"></col>
        </colgroup>
          <thead>
            <tr> 
            <th>Date</th> 
            <th>Category<th>
            <th>P/S</th>
            <th>Location</th> 
            </tr> 
            </thead>
            </tbody>
            <% @eob.items.each do |item| %> 
            <tr class='eobitem'>
             <td><%= item[:startDate]%></td>
             <td><%= item[:category].join(",")%></td>
             <td><%= item[:productOrService]%></td>
             <td><%= item[:location].join(",")%></td>
            </tr>
<% if item[:adjudication].length > 0%>
<tr>
<td>
</td>
<td>Adjudication</td>
<td>
<table class='table table-dark '>
<tbody>
<tr class=adjudication>
                    <% item[:adjudication].each do |adj|%>
                        <td> <%= adj[1] %> </td>
                     <%end%>
</tr>
<tr class=adjudication>
                    <% item[:adjudication].each do |adj|%>
                        <td> <%= adj[0]%> </td>
                     <%end%>
</tr>
</tbody>
</table>
</td>
<td>
</td>
</tr>
<%end %>
         <% end %>
         </tbody>
         </table>
 
      </div>
  </section>
</section>


 